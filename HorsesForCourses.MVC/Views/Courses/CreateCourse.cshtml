@using HorsesForCourses.MVC.Models.Courses
@model CreateCourseViewModel

<h2>Register Coach</h2>
<form asp-action="CreateCourse" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label>Name</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>StartDate</label>
        <input asp-for="StartDate" type="date" />
    </div>
    <div>
        <label>EndDate</label>
        <input asp-for="EndDate" type="date" />
    </div>

    <button type="submit">Save</button>
</form>