@using System.Text.Json
@using HorsesForCourses.MVC.Models.Coaches
@model UpdateSkillsViewModel

<h2>Update Skills</h2>

<form asp-action="UpdateSkills" method="post" asp-antiforgery="true">

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" readonly />
    </div>

    <div id="skills-list"></div>

    <button type="submit" id="save-btn" class="btn btn-primary">Save</button>

</form>

@section Scripts {
    <script type="module">
        import { renderSkillList } from '/js/Coaches/update-skills.js';
        (function () {
            let skills = @Html.Raw(JsonSerializer.Serialize(Model.Skills));
            renderSkillList(skills, document.getElementById('skills-list'));
        })();
    </script>
}
